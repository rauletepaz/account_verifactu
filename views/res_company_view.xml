<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_company_form_verifactu" model="ir.ui.view">
    <field name="name">res.company.form.verifactu</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
    	<xpath expr="//notebook[@colspan='4']/page[1]/group/group" position="inside">
        	<group name="Verifactu" string="Veri*factu / AEAT" colspan="4">
        	    <field name="verifactu_active" />
        	    <field name="verifactu_razon_social" />
          		<field name="verifactu_operation" placeholder="Use your CNAE description"/>
          		
		        <field name="verifactu_p12_filename" invisible="1" />
		        <field name="verifactu_p12_file" filename="verifactu_p12_filename"  widget="binary"/>
		        <field name="verifactu_p12_password" password="True" placeholder="••••••••"/>
		        
          		
        	</group>
     	</xpath>
    </field>
  </record>
</odoo>