<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="account_tax_verifactu_inherit_form" model="ir.ui.view">
            <field name="name">account.tax.verifactu.inherit.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//notebook" position="inside">
                        <page string="Veri*Factu Options" attrs="{'invisible':[('verifactu_active','=', False)]}">
                            <group>
                                <group>
                                    <field name="verifactu_active" invisible="1"/>
                                    <field name="verifactu_impuesto" attrs="{'invisible':[('verifactu_active','=', False)]}"/>
                                    <field name="verifactu_regimen" attrs="{'invisible':[('verifactu_active','=', False)]}"/>
                                    <field name="verifactu_calificacion" attrs="{'invisible':[('verifactu_active','=', False)]}"/>
                                    <field name="verifactu_exento" attrs="{'invisible':[('verifactu_active','=', False)]}"/>
                                </group>
                            </group>
                        </page>
                </xpath>
           </field>
        </record>
</odoo>

        
        
